# SQLite Configuration
SQLITE_DB_PATH=data/music_organizer.db
SQLITE_TEST_DB_PATH=data/sandbox.db

# Plex Configuration - Production
PLEX_SERVER_URL=your-plex-server.local
PLEX_SERVER_NAME=YourServerName
PLEX_SERVER_TOKEN=your_plex_token
PLEX_MUSIC_LIBRARY=Music
PLEX_USER=your_plex_email
PLEX_PASSWORD=your_plex_password

# Plex Configuration - Test
PLEX_TEST_SERVER_URL=your-test-server.local
PLEX_TEST_SERVER_NAME=TestServerName
PLEX_TEST_SERVER_TOKEN=your_test_token
PLEX_TEST_LIBRARY=test_music

# Last.fm Configuration
LASTFM_API_KEY=your_api_key
LASTFM_SHARED_SECRET=your_shared_secret
LASTFM_APP_NAME=your_app_name
LASTFM_USERNAME=your_username

# Discogs Configuration
DISCOGS_CONSUMER_KEY=your_consumer_key
DISCOGS_CONSUMER_SECRET=your_consumer_secret
DISCOGS_APP_NAME=your_app_name

# AcoustID Configuration
# Used to resolve AcousticID -> MusicBrainz Recording ID for BPM lookup
# Get an API key at: https://acoustid.org/api-key
ACOUSTID_API_KEY=your_acoustid_api_key

# Spotify Configuration
# Used to fetch audio features (BPM, energy, danceability, etc.)
# Get credentials at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Music File Path Mapping
# Maps Plex-stored paths to locally accessible mount paths
# Required for ffprobe MBID extraction from audio files

# Production - Plex path prefix to local mount prefix
MUSIC_PATH_PREFIX_PLEX=/music
MUSIC_PATH_PREFIX_LOCAL=/mnt/your-nas/music

# Test - Plex path prefix to local mount prefix
MUSIC_PATH_PREFIX_PLEX_TEST=/volume1/media/music
MUSIC_PATH_PREFIX_LOCAL_TEST=/mnt/test-nas/music
